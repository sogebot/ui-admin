{
  "name": "@sogebot/ui-admin",
  "version": "0.0.12",
  "author": "sogehige@gmail.com",
  "description": "Nuxt.js version of ui-admin",
  "scripts": {
    "postinstall": "npx simple-git-hooks",
    "prepublishOnly": "npm run generate",
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --quiet --ext \".js,.vue\" --fix --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{vue,css}\" --ignore-path .gitignore",
    "lint": "npm run lint:js && npm run lint:style"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "eslint --fix",
    "*.{css,vue}": "stylelint"
  },
  "simple-git-hooks": {
    "pre-commit": "npx simple-git-hooks && npx lint-staged",
    "commit-msg": "npx commitlint -e \"$1\"",
    "preserveUnused": true
  },
  "dependencies": {
    "@sogebot/ui-helpers": "^1.9.0",
    "chart.js": "^2.9.4",
    "core-js": "^3.11.1",
    "nuxt": "^2.15.4",
    "uuid": "^8.3.2",
    "vue-chartkick": "^0.6.1",
    "vue-codemirror": "^4.0.6",
    "vuedraggable": "^2.24.3",
    "xregexp": "^5.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sogebot/ui-admin.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@mdi/js": "^5.9.55",
    "@nuxt/types": "^2.15.4",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/vuetify": "^1.11.3",
    "@types/chart.js": "^2.9.32",
    "@types/lodash-es": "^4.17.4",
    "@types/uuid": "^8.3.0",
    "@types/vue-chartkick": "^0.5.1",
    "@vue/composition-api": "^1.0.0-rc.8",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.9.0",
    "lint-staged": "^11.0.0",
    "simple-git-hooks": "^2.4.1",
    "stylelint": "^13.13.0",
    "stylelint-config-standard": "^22.0.0",
    "typeorm": "^0.2.32",
    "vuetify": "^2.4.11"
  }
}
