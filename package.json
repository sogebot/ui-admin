{
  "name": "@sogebot/ui-admin",
  "version": "0.0.29",
  "author": "sogehige@gmail.com",
  "description": "Nuxt.js version of ui-admin",
  "scripts": {
    "postinstall": "patch-package",
    "release": "standard-version",
    "prepublishOnly": "npm run generate",
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --quiet --ext \".js,.vue\" --fix --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{vue,css}\" --ignore-path .gitignore",
    "lint": "npm run lint:js && npm run lint:style"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "eslint --fix",
    "*.{css,vue}": "stylelint"
  },
  "simple-git-hooks": {
    "pre-commit": "npx simple-git-hooks && npx lint-staged",
    "commit-msg": "node ./.bot/tools/pre-commit-message.js $1 $2 $3",
    "preserveUnused": true
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/proxy": "^2.1.0",
    "@sogebot/ui-helpers": "^2.3.0",
    "animate.css": "^4.1.1",
    "chart.js": "^2.9.4",
    "core-js": "^3.14.0",
    "gsap": "^3.7.0",
    "nuxt": "^2.15.7",
    "prismjs": "^1.23.0",
    "shortid": "^2.2.16",
    "uuid": "^8.3.2",
    "v-snackbars": "^3.2.4",
    "vue-audio-visual": "^2.2.2",
    "vue-chartkick": "^0.6.1",
    "vue-plyr": "^7.0.0",
    "vue-prism-editor": "^1.2.2",
    "vuedraggable": "^2.24.3",
    "xregexp": "^5.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sogebot/ui-admin.git"
  },
  "devDependencies": {
    "@mdi/js": "^5.9.55",
    "@nuxt/types": "^2.15.7",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.1",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/vuetify": "^1.12.1",
    "@types/chart.js": "^2.9.32",
    "@types/lodash-es": "^4.17.4",
    "@types/prismjs": "^1.16.5",
    "@types/shortid": "^0.0.29",
    "@types/uuid": "^8.3.0",
    "@types/vue-chartkick": "^0.5.1",
    "@vue/composition-api": "^1.0.0-rc.11",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.11.1",
    "lint-staged": "^11.0.0",
    "obs-websocket-js": "^4.0.2",
    "patch-package": "^6.4.7",
    "simple-git-hooks": "^2.4.1",
    "standard-version": "^9.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "typeorm": "^0.2.34",
    "vuetify": "^2.5.4"
  }
}
